# Creating and displaying a vector (1D array)
import numpy as np 
  
# creating horizontal 1D array
vector1 = np.array([1, 2, 3])

# creating vertical 1D array  
vector2 = np.array([[10], [20], [30]]) 
  
# showing horizontal vector 
print("Horizontal Vector") 
print(vector1) 
  
# showing vertical vector 
print("Vertical Vector") 
print(vector2) 
